#old 9front-native way
#files=`{>[2]/dev/null walk $dir |grep '.*\.py$' >[2]/dev/null}

ifs='
'

if(~ $#* 1) {
        name=$"*
}
if not {
        name=`{read}
}
if (! ~ $#name 1) {
        echo nope
        exit
}

matches=`{>[2]/dev/null r git grep -nE '''^[ 	]*(def|class)[ 	]+'^$"name^'\(''' '`git ls-files |grep ''.*\.py$''`'}

acme_savepos

switch ($#matches) {
    case 0
        echo no matches
	case 1
		plumb `{echo $matches(1) |sed 's/^(.*:[0-9]+):.*/\1/'}
	case *
		for (match in $matches) {
			echo $match
		}
}
